# Server Configuration
PORT=4000

# Database Configuration
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# JWT Configuration
AUTH_JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=1h

# Setup Configuration t
SETUP_TOKEN=your_setup_token_here

# OAuth Configuration (Google)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
OAUTH_REDIRECT_BASE=https://accounts.revalenz.de

# Multi-Tenant Configuration
DEFAULT_TENANT_ID=1
DEFAULT_TENANT_NAME=Revalenz GmbH
DEFAULT_TENANT_DOMAIN=revalenz.de

# Security Configuration
# Optional: nur E-Mails einer Domain zulassen
ALLOWED_DOMAIN=
# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (für Benachrichtigungen und Verifizierung)
# Für Entwicklung: SMTP (Gmail, Outlook, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Für Produktion: SendGrid (empfohlen)
SENDGRID_API_KEY=your_sendgrid_api_key

# Absender-E-Mail
FROM_EMAIL=noreply@revalenz.de

# Email-Verifizierung
EMAIL_VERIFICATION_ENABLED=true
EMAIL_VERIFICATION_TOKEN_EXPIRES_HOURS=24

# Frontend Configuration
FRONTEND_URL=https://revalenz.de
API_BASE_URL=/api

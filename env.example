# Server Configuration
PORT=4000

# Database Configuration
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# JWT Configuration
AUTH_JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h
AUTH_REFRESH_SECRET=your_refresh_secret_here
AUTH_REFRESH_EXPIRES=30d

# Setup Configuration
SETUP_TOKEN=your_setup_token_here

# OAuth Configuration
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Microsoft OAuth
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret

# OAuth Redirect Base (auth-baustein Domain)
BACKEND_URL=https://accounts.revalenz.de
OAUTH_REDIRECT_BASE=https://accounts.revalenz.de

# Multi-Domain Support
# Default Frontend URL (Fallback wenn kein redirect Parameter übergeben wird)
FRONTEND_URL=https://revalenz.de

# Erlaubte Redirect Origins (werden in src/utils/redirect.js validiert)
# - https://revalenz.de
# - https://www.revalenz.de
# - https://benefizshow.de
# - https://www.benefizshow.de
# - https://ecotrainer.revalenz.de

# Cookie Domain für Refresh Token
AUTH_COOKIE_DOMAIN=.revalenz.de

# Multi-Tenant Configuration
DEFAULT_TENANT_ID=1
DEFAULT_TENANT_NAME=Revalenz GmbH
DEFAULT_TENANT_DOMAIN=revalenz.de

# Security Configuration
# Optional: nur E-Mails einer Domain zulassen
ALLOWED_DOMAIN=
# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
# Komma-separierte Liste zusätzlicher erlaubter Origins
CORS_ORIGINS=https://ecotrainer.revalenz.de

# Email Configuration (für Benachrichtigungen und Verifizierung)
# Für Entwicklung: SMTP (Gmail, Outlook, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Für Produktion: SendGrid EU (empfohlen - GDPR-konform, günstiger)
SENDGRID_API_KEY=your_sendgrid_api_key

# Alternative: Mailgun EU
MAILGUN_EU_API_KEY=your_mailgun_eu_api_key
MAILGUN_EU_DOMAIN=mg.revalenz.de

# Absender-E-Mail
FROM_EMAIL=noreply@revalenz.de

# Email-Verifizierung
EMAIL_VERIFICATION_ENABLED=true
EMAIL_VERIFICATION_TOKEN_EXPIRES_HOURS=24

# API Configuration
API_BASE_URL=/api
